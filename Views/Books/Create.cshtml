@model ReadingReviewSystem1207.Models.Entities.Review

<form asp-controller="Review" asp-action="Create" method="post" enctype="multipart/form-data" class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    @Html.AntiForgeryToken()

    <div class="card p-4 shadow-lg" style="width: 500px;">
        <h3 class="text-center mb-4">📚 新增讀書心得</h3>

        <!-- 書名 -->
        <div class="mb-3">
            <label for="Title" class="form-label fw-bold">
                <i class="fas fa-book"></i> 書名：
            </label>
            <input asp-for="Title" class="form-control rounded" placeholder="請輸入書名" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- 心得內容 -->
        <div class="mb-3">
            <label for="Content" class="form-label fw-bold">
                <i class="fas fa-pen"></i> 心得內容：
            </label>
            <textarea asp-for="Content" class="form-control rounded" rows="20" style="min-height: 200px;" placeholder="寫下你的閱讀心得..." required></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <!-- 封面圖片 -->
        <div class="mb-3">
            <label for="CoverImage" class="form-label fw-bold">
                <i class="fas fa-image"></i> 封面圖片：
            </label>
            <input type="file" id="CoverImage" name="coverImage" class="form-control rounded" />
        </div>

        <!-- 選擇教師 -->
        <div class="form-group">
            <label for="TeacherId">選擇教師</label>
            <select asp-for="TeacherId" class="form-control"
                    asp-items="@(ViewBag.TeacherList as List<SelectListItem> ?? new List<SelectListItem>())">
                <option value="">-- 請選擇教師 --</option>
            </select>
            <span asp-validation-for="TeacherId" class="text-danger"></span>
        </div>

        <!-- 提交按鈕 -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary w-100">
                📌 提交心得
            </button>
        </div>
    </div>
</form>
