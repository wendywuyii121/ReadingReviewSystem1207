<form asp-controller="Books" asp-action="Create" method="post" enctype="multipart/form-data" class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    @Html.AntiForgeryToken()

    <div class="card p-4 shadow-lg" style="width: 500px;">
        <h3 class="text-center mb-4">📚 新增讀書心得</h3>

        <!-- 書名 -->
        <div class="mb-3">
            <label for="Title" class="form-label fw-bold">
                <i class="fas fa-book"></i> 書名：
            </label>
            <input type="text" id="Title" name="Title" class="form-control rounded" placeholder="請輸入書名" required />
        </div>

        <!-- 心得內容 -->
        <div class="mb-3">
            <label for="Review" class="form-label fw-bold">
                <i class="fas fa-pen"></i> 心得內容：
            </label>
            <textarea id="Review" name="Review" class="form-control rounded" rows="20" style="min-height: 200px;" placeholder="寫下你的閱讀心得..." required></textarea>
        </div>

        <!-- 封面圖片 -->
        <div class="mb-3">
            <label for="CoverImage" class="form-label fw-bold">
                <i class="fas fa-image"></i> 封面圖片：
            </label>
            <input type="file" id="CoverImage" name="coverImage" class="form-control rounded" />
        </div>

        <!-- 提交按鈕 -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary w-100">
                📌 提交心得
            </button>
        </div>
    </div>
</form>
