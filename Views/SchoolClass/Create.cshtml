@model ReadingReviewSystem1207.Models.Entities.SchoolClass

<h2>新增班級</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ClassName">班級名稱</label>
        <input asp-for="ClassName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Subject">科目</label>
        <input asp-for="Subject" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">備註</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">新增</button>
    <a asp-action="Index" class="btn btn-secondary">返回</a>
</form>
