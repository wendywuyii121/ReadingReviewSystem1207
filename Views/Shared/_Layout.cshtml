<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 讀書心得系統</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- ✅ 確保 FontAwesome 正確引入 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">讀書心得系統</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="切換導航">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">首頁</a>
                        </li>
                    </ul>

                    @using Microsoft.AspNetCore.Identity
                    @inject SignInManager<ApplicationUser> SignInManager
                    @inject UserManager<ApplicationUser> UserManager

                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var user = await UserManager.GetUserAsync(User);
                            var role = user?.Role ?? "Guest";  // 預設為 Guest
                            var roleDisplay = "";
                            var icon = "";

                            switch (role)
                            {
                                case "Student":
                                    icon = "🎓";
                                    roleDisplay = "同學";
                                    break;
                                case "Teacher":
                                    icon = "🏫";
                                    roleDisplay = "老師";
                                    break;
                                case "Admin":
                                    icon = "🛡";
                                    roleDisplay = "管理員";
                                    break;
                                default:
                                    icon = "👤";
                                    roleDisplay = "";
                                    break;
                            }

                            <li class="nav-item d-flex align-items-center">
                                <span class="nav-link">
                                    @icon <strong>歡迎，@user.Name@roleDisplay</strong>
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">登出</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary btn-sm me-2" asp-action="Login" asp-controller="Account">
                                    <i class="fas fa-sign-in-alt"></i> 登入
                                </a>
                                <a class="btn btn-primary btn-sm" asp-action="Register" asp-controller="Account">
                                    <i class="fas fa-user-plus"></i> 註冊
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="border-top text-center py-3 mt-4">
        <p>© @DateTime.Now.Year - 讀書心得系統</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
